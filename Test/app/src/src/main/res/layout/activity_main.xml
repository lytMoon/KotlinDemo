<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_launcher3"
    tools:context=".MainActivity"
    >

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="学生信息管理系统"
        android:textColor="#3299cc"
        android:textSize="40sp"
        android:textStyle="normal"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:background="@drawable/bg"
        android:hint="账号：                                 "
        android:maxEms="11"
        android:minHeight="48dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg"
        android:hint="密码：                                 "
        android:maxEms="11"
        android:padding="10dp"
        android:minHeight="48dp"
        android:textColorHighlight="@color/gold"
        android:textColorHint="@color/material_dynamic_neutral80"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        >

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="110dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3299cc"
        android:text="LogIn"
        android:textSize="16dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="5dp"
            android:height="0dp"
            android:width="110dp"
            android:layout_gravity="center_horizontal"
            android:text="Register"
            android:textSize="16sp"
            android:backgroundTint="#3299cc"
            />
</LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_launcher3"
    tools:context=".LoginActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生信息管理系统"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="学生信息"
        android:textSize="30dp"
        android:layout_gravity="left"
        android:drawableStart="@drawable/user"
        android:textColor="@color/blue"
        android:layout_marginTop="80dp"
        />

    <Button
        android:id="@+id/BtnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/whiteblue1"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:drawableLeft="@drawable/add"
        android:text="增加信息"
        android:textSize="30dp" />

    <Button
        android:id="@+id/BtnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/whiteblue2"
        android:drawableLeft="@drawable/userdelete"
        android:text="删除信息"
        android:textSize="30dp" />

    <Button
        android:id="@+id/BtnChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/whiteblue3"
        android:drawableLeft="@drawable/userchange"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="修改信息"
        android:textSize="30dp" />

    <Button
        android:id="@+id/BtnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/whiteblue4"
        android:drawableLeft="@drawable/userresearch"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="查询信息"
        android:textSize="30dp"
    />

</LinearLayout>